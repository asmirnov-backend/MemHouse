{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "root": "",
  "compilerOptions": {
    "tsConfigPath": "apps/api/tsconfig.app.json",
    "plugins": ["@nestjs/graphql"],
    "webpack": false
  },
  "projects": {
    "gateway": {
      "type": "application",
      "root": "",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "users": {
      "type": "application",
      "root": "",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json"
      }
    },
    "mems": {
      "type": "application",
      "root": "",
      "entryFile": "main",
      "sourceRoot": "apps/mems/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mems/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "common",
      "entryFile": "index",
      "sourceRoot": "common/src",
      "compilerOptions": {
        "tsConfigPath": "common/tsconfig.lib.json"
      }
    },
    "interfaces": {
      "type": "library",
      "root": "interfaces",
      "entryFile": "index",
      "sourceRoot": "interfaces/src",
      "compilerOptions": {
        "tsConfigPath": "interfaces/tsconfig.lib.json"
      }
    }
  }
}
