{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testEnvironment": "node",
  "testRegex": ".*\\.unit.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^axios$": "axios/dist/axios.js",
    "^@common/(.*)": "<rootDir>/common/src/$1",
    "^@api/(.*)": "<rootDir>/apps/api/src/$1"
  }
}
