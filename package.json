{
  "name": "memhouse-server",
  "version": "0.0.1",
  "description": "",
  "author": "Smirnov Andrew",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:dev:gateway": "nest start --watch gateway",
    "start:dev:users": "nest start --watch users",
    "start:dev:mems": "nest start --watch mems",
    "start:repl": "nest start --entryFile repl",
    "start:prod": "node dist/apps/api/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "jest --config ./test/config/jest.unit.config.json",
    "test:integration": "jest --config ./test/config/jest.integration.config.json",
    "test:e2e": "jest --config ./test/config/jest.e2e.config.json",
    "test:all": "jest --config ./test/config/jest.unit.config.json && jest --config ./test/config/jest.integration.config.json && jest --config ./test/config/jest.e2e.config.json",
    "db:generate": "prisma generate",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed/seed.ts"
  },
  "dependencies": {
    "@apollo/gateway": "^2.2.3",
    "@apollo/subgraph": "^2.2.3",
    "@nestjs/apollo": "^11.0.4",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^11.0.4",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^2.1.0",
    "@prisma/client": "^4.7.1",
    "apollo-server-express": "^3.12.0",
    "axios": "^1.3.4",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "graphql": "^16.5.0",
    "hive-driver": "^0.1.5",
    "lodash": "^4.17.21",
    "luxon": "^3.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.1",
    "rxjs": "^7.2.0",
    "ts-morph": "^15.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^9.2.2",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.176",
    "@types/luxon": "^2.0.6",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "prisma": "^4.7.1",
    "prisma-erd-generator": "^1.2.4",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "webpack": "^5.61.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^axios$": "axios/dist/axios.js",
      "^@common/(.*)": "<rootDir>/common/src/$1",
      "^@api/(.*)": "<rootDir>/apps/api/src/$1"
    }
  }
}
