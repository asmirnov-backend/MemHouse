{
  "name": "memhouse-server",
  "version": "0.0.1",
  "description": "",
  "author": "Smirnov Andrew",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:dev:gateway": "nest start --watch gateway",
    "start:dev:user": "nest start --watch user",
    "start:dev:mem": "nest start --watch mem",
    "start:repl": "nest start --entryFile repl",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "jest --config ./test/config/jest.unit.config.json",
    "test:integration": "jest --config ./test/config/jest.integration.config.json",
    "test:e2e": "jest --config ./test/config/jest.e2e.config.json",
    "test:all": "jest --config ./test/config/jest.unit.config.json && jest --config ./test/config/jest.integration.config.json && jest --config ./test/config/jest.e2e.config.json",
    "db:generate": "prisma generate",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed/seed.ts"
  },
  "dependencies": {
    "@apollo/gateway": "^2.2.3",
    "@apollo/subgraph": "^2.2.3",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/schedule": "^3.0.2",
    "@prisma/client": "^5.1.1",
    "apollo-server-express": "^3.12.0",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "graphql": "^16.7.1",
    "lodash": "^4.17.21",
    "luxon": "^3.3.0",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.11",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.1.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.196",
    "@types/luxon": "^3.3.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-sonarjs": "^0.20.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.1",
    "prisma": "^5.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^axios$": "axios/dist/axios.js",
      "^@common/(.*)": "<rootDir>/common/src/$1",
      "^@api/(.*)": "<rootDir>/apps/api/src/$1"
    }
  }
}
